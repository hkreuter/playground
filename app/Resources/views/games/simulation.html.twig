        <div id="siminfo" class="siminfo">
            <table width="100%">
                <colgroup>
                    <col width="35%">
                    <col width="30%">
                    <col width="35%">
                </colgroup>
                <tr>
                    <td>Game </td>
                    <td><div id="status">more Infos</div></td>
                    <td><div id="mode">more Infos</div></td>
                </tr>
                <tr>
                    <td>Living Cells</td>
                    <td>
                        <div id="livecount"></div>
                    </td>
                    <td><div id="debug"></div></td>
                </tr>
                <tr>
                    <td>Iterations done</td>
                    <td><div id="iterationcount"></div></td>
                    <td></td>
                </tr>
            </table>

            <div id="subinfo" class="siminfo moreinfo">- Conways Game of Life -</div>
        </div>

    </div>

