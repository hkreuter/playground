{% extends 'HrBundle:Default:base.html.twig' %}

{% block meta %}
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"/>
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta http-equiv="content-language" content="en" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/jquerymobile.css') }}" media="screen"/>
    <link rel="stylesheet" href="{{ asset('css/hrbundle.css') }}" media="screen"/>
{% endblock %}

{% block body_header %}
    <div id="index_main_top" class="mainindex_top" >
        <table>
            <colgroup>
                <col width="30%" />
                <col width="20%" />
                <col width="50%" />
            </colgroup>
            <tr>
                <td><img align="center" src={{ asset('favicon.ico') }} /></td>
                <td>&nbsp;</td>
                <td><i>blogaboutwhatever.com's playground</i></td>
            </tr>
        </table>
    </div>
{% endblock %}

{% block body_main %}
    <div class="mainindex" >
        <table align="center">
            <colgroup>
                <col width="30%" />
                <col width="5%" />
                <col width="30%" />
                <col width="5%" />
                <col width="30%" />
            </colgroup>
            <tr>
                <td><a href="simulation" alt="Game of Life" title="Game of Life" ><img align="center" src={{ asset('pic_simulation.jpg') }} /></a></td>
                <td>&nbsp;</td>
                <td><a href="solitaire" alt="Solitaire" title="Solitaire" ><img src={{ asset('pic_solitaire.jpg') }} /></a></td>
                <td>&nbsp;</td>
                <td><a href="tiles" alt="Tiles" title="Tiles"><img src={{ asset('pic_tiles.jpg') }} /></a></td>
            </tr>
            <tr>
                <td colspan="5">&nbsp;</td>
            </tr>
            <tr>
                <td><a href="memory" alt="Memory" title="Memory is not yet available" ><img src={{ asset('pic_memory.jpg') }} /></a></td>
                <td>&nbsp;</td>
                <td><a href="gems" alt="Gems" title="Gems is not yet available"><img src={{ asset('pic_gems.jpg') }} /></a></td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td colspan="5">&nbsp;</td>
            </tr>

        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts '@jquery_and_ui' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}