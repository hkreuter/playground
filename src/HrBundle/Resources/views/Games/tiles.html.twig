{% extends 'HrBundle:Games:index.html.twig' %}

{% block title %}
    Tiles
{% endblock %}

{% block body_header %}
    {{ parent() }}
{% endblock %}

{% block body_main %}

<div class="mainindex relpos minpad" >

    <div class="ui-grid-solo">
        <div class="ui-block-a">
            <div id="container" class="relpos simsize"></div>
        </div>
    </div>

    <div class="ui-grid-solo">
        <div class="ui-block-a">
            <button type="button" id="timerdiv" data-theme="a" data-icon="info"
                    data-mini="true" data-shadow="false" data-corners="true" >00:00:00</button>
        </div>
    </div>

    <div class="ui-grid-b" >
        <div class="ui-block-a">
            <button type="button" id="home" data-theme="a" data-icon="home"
                    data-mini="true" data-shadow="true" data-corners="true" >home</button>
        </div>
        <div class="ui-block-b">
            <button type="button" id="shuffle" data-theme="a" data-icon="grid"
                    data-mini="true" data-shadow="true" data-corners="true" >shuffle</button>
        </div>
        <div class="ui-block-c">
            <button type="button" id="reset" data-theme="a" data-icon="refresh"
                    data-mini="true" data-shadow="true" data-corners="true" >reset</button>
        </div>
    </div>

</div>

{% endblock %}

{% block header_details %}
    <div id="subinfo" class="siminfo moreinfo">- Tiles -</div>
{% endblock %}

{% block javascripts %}
    {% javascripts '@jquery_and_ui'
    '@bundle_hr_js_tiles' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}

